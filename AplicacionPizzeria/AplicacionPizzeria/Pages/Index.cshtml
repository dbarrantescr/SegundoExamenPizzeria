@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Examen 2 Ingeniería de Software CI0126</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/img/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.13.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
</head>
    <body id="page-top">
        <form method="post">

            <!-- Navigation-->
            <nav class="navbar navbar-expand-lg bg-secondary text-uppercase fixed-top" id="mainNav">
                <div class="container">
                    <a class="navbar-brand js-scroll-trigger" href="#page-top">Pizzería Confiable</a>
                    <div class="collapse navbar-collapse" id="navbarResponsive">
                        <ul class="navbar-nav ml-auto"></ul>
                    </div>
                </div>
            </nav>
            <header class="masthead bg-primary text-white text-center">
                <div class="container d-flex align-items-center flex-column">
                    <img class="masthead-avatar mb-5" src="~/assets/img/pizza.svg" alt="" />
                    <h1 class="masthead-heading text-uppercase mb-0">Pizzería la Confiable</h1>
                    <div class="divider-custom divider-light">
                        <div class="divider-custom-line"></div>
                        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                        <div class="divider-custom-line"></div>
                    </div>
                    <p class="masthead-subheading font-weight-light mb-0 text-uppercase">Tu Pizza Favorita, En la puerta de tu casa</p>
                </div>
            </header>


            <!-- Mensaje retroalimentacion -->
            <section class="page-section" id="SeccionRetroalimentacion">
                <div class="container ">

                    @if (Model.mensajeRetroalimentacion != null)
                    {
                        if (Model.mensajeRetroalimentacion.Contains("favor"))
                        {
                            <h3 class="message_danger">@Model.mensajeRetroalimentacion </h3>
                        }
                        else
                        {
                            <h3 class="message_success">@Model.mensajeRetroalimentacion </h3>
                        }
                    }
                </div>
            </section>

            <!-- Tamño pizza -->
            <section class="page-section bg-primary text-white mb-0" id="about">
                <div class="container align-items-center">
                    <h2 class="page-section-heading text-center text-uppercase text-white">Elige el tamaño de tu pizza</h2>
                    <div class="divider-custom divider-light">
                        <div class="divider-custom-line"></div>
                        <div class="divider-custom-icon divider-light"><i class="fas fa-star"></i></div>
                        <div class="divider-custom-line"></div>
                    </div>
                    <!-- Seleccion tamaño pizza-->
                    <div class="row align-items-center">


                        <input class="css-checkbox" type="radio" id="tamañoPequeño" name="tamaño" value="Pequeña" />
                        <label for="tamañoPequeño" class="css-label-radio">Pequeña</label>

                        <input class="css-checkbox" type="radio" id="tamañoMediano" name="tamaño" value="Mediana" />
                        <label for="tamañoMediano" class="css-label-radio">Mediana</label>

                        <input class="css-checkbox" type="radio" id="tamañoGrande" name="tamaño" value="Grande" />
                        <label for="tamañoGrande" class="css-label-radio">Grande</label>

                        <input class="css-checkbox" type="radio" id="TamañoExtraGrande" name="tamaño" value="ExtraGrande"/>
                        <label for="TamañoExtraGrande" class="css-label-radio">Extra Grande</label>

                    </div>
                </div>
            </section>


            <!-- Toppings Section -->
            <section class="page-section bg-second mb-0" id="portfolio">
                <div class="container">

                    <h2 style="color:#2c3e50" class="page-section-heading text-center text-uppercase">Elige los toppings de tu pizza</h2>

                    <div class="divider-custom">
                        <div class="divider-custom-line"></div>
                        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                        <div class="divider-custom-line"></div>
                    </div>

                    <div class="row">
                        <!-- Seleccion de toppings -->
                        <input class="css-checkbox" type="checkbox" name="Queso" id="Queso" value="Queso" />
                        <label for="Queso" class="css-label">Queso</label>

                        <input class="css-checkbox" type="checkbox" name="Salsa" id="Salsa" value="Salsa" />
                        <label for="Salsa" class="css-label">Salsa</label>

                        <input class="css-checkbox" type="checkbox" name="Jamon" id="Jamon" value="Jamon" />
                        <label for="Jamon" class="css-label">Jamon</label>

                        <input class="css-checkbox" type="checkbox" name="Peperoni" id="Peperoni" value="Peperoni" />
                        <label for="Peperoni" class="css-label">Peperoni</label>

                        <input class="css-checkbox" type="checkbox" name="Hongos" id="Hongos" value="Hongos" />
                        <label for="Hongos" class="css-label">Hongos</label>

                        <input class="css-checkbox" type="checkbox" name="Cebolla" id="Cebolla" value="Cebolla" />
                        <label for="Cebolla" class="css-label">Cebolla</label>

                        <input class="css-checkbox" type="checkbox" name="Chile" id="Chile" value="Chile" />
                        <label for="Chile" class="css-label">Chile</label>

                        <input class="css-checkbox" type="checkbox" name="Tocineta" id="Tocineta" value="Tocineta" />
                        <label for="Tocineta" class="css-label">Tocineta</label>

                        <input class="css-checkbox" type="checkbox" name="Olivas" id="Olivas" value="Olivas" />
                        <label for="Olivas" class="css-label">Olivas</label>

                        <input class="css-checkbox" type="checkbox" name="Piña" id="Piña" value="Piña" />
                        <label for="Piña" class="css-label">Piña</label>

                    </div>

                </div>
            </section>

            <section class="page-section bg-third text-white mb-0" id="SeccionDireccion">
                <div class="container">
                    <!-- Contact Section Heading-->
                    <h2 class="page-section-heading text-center text-uppercase text-white">Ingresa la dirección de entrega</h2>
                    <!-- Icon Divider-->
                    <div class="divider-custom divider-light">
                        <div class="divider-custom-line"></div>
                        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                        <div class="divider-custom-line"></div>
                    </div>

                    <div class="row">
                        <div class="col-lg-8 mx-auto">
                            <div class="control-group">
                                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                    <label>Direccion</label>
                                    <input class="form-control" style="background-color:white" name="direccionPedido" id="name" type="text" placeholder="Dirección"  />
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <br />
                            <div id="success"></div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-lg-8 mx-auto">
                            <div style="display:flex; justify-content:center"><button class="btn btn-primary btn-xl" id="sendMessageButton" type="submit" name="OrdenarPizza">Ordenar Pizza</button></div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Bootstrap core JS-->
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js"></script>
            <!-- Third party plugin JS-->
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
            <!-- Contact form JS-->
            <script src="assets/mail/jqBootstrapValidation.js"></script>
            <script src="assets/mail/contact_me.js"></script>
            <!-- Core theme JS-->
            <script src="js/scripts.js"></script>
        </form>
</body>

</html>
